@model SchoolEasy.Web.Areas.School.Models.RegistrationEntryModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Registration Master</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Edit", "RegistrationMaster", new { area = "School" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="çol-md-6">
                            <div class="form-group">
                                @Html.HiddenFor(x=>x.id)
                                <label>Student Name</label>
                                @Html.EditorFor(m => m.StudentName, new { htmlAttributes = new { @placeholder = "Enter Student Name", @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.StudentName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Select Course</label>
                                @Html.DropDownList("CourseId", null, "Select Course", htmlAttributes: new { @class = "form-control", @onchange = "BindClass()" })
                                @Html.ValidationMessageFor(m => m.CourseId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Select Class</label>
                                @Html.DropDownList("ClassId", null, "Select Class", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ClassId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Father Name</label>
                                @Html.EditorFor(m => m.FatherName, new { htmlAttributes = new { @placeholder = "Enter Father Name", @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.FatherName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Registration Amount</label>
                                @Html.EditorFor(m => m.RegistrationAmount, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(m => m.RegistrationAmount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="çol-md-6">
                            <div class="form-group">
                                <label>Registration No</label>
                                @Html.EditorFor(m => m.RegistrationNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(m => m.RegistrationNo, "", new { @class = "text-danger" })
                            </div>
                          
                            <div class="form-group">
                                <label>Mobile No</label>
                                @Html.EditorFor(m => m.MobileNo, new { htmlAttributes = new { @placeholder = "Enter Mobile No.", @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                @Html.TextAreaFor(x => x.Address, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="@Url.Action("Index","RegistrationMaster",new { area = "School"})" class="btn bg-maroon margin">Back to List</a>
                    </div>
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>

<script type="text/javascript">
    function BindClass() {
    var CourseId = $('#CourseId').val();
    //alert(course_code);
    $.ajax({
    url: '@Url.Action("FillClass", "RegistrationMaster", new { area = "School" })',
    type: "GET",
    dataType: "JSON",
    data: { CourseId: CourseId },
    success: function (Result) {
        $("#ClassId").html("");
        $("#RegistrationAmount").val(0);
        $("#RegistrationAmount").val(Result.Amount);
    var optionhtml1 = '<option value="">' + "--Select Class--" + '</option>';
    $("#ClassId").append(optionhtml1);
        $.each(Result.classes, function (i) {
            var optionhtml = '<option value="' + Result.classes[i].Value + '">' + Result.classes[i].Text + '</option>';
    $("#ClassId").append(optionhtml);
    });
    }
    });
    }
</script>



